#!/bin/bash

FOLDER_PATH=`dirname $0`
FILE_PATH="$FOLDER_PATH/$1"

if [[ $FILE_PATH != *".cpp" ]]; then
    FILE_PATH="$FILE_PATH.cpp"
fi

if [[ -e $FILE_PATH ]]; then
    echo FILE ALREADY EXISTS
else
    touch "$FILE_PATH"
    echo -e $"#include <bits/sdtc++.h>\n\nusing namespace std;\n\nint main() {\n    ios::sync_with_stdio(false);\n    cin.tie(nullptr);\n    freopen(\"${2}.in\", \"r\", stdin);\n    freopen(\"${2}.out\", \"w\", stdout);\n    \n}" > "$FILE_PATH"
    nvim "$FILE_PATH"
fi
